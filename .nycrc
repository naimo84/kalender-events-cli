{
  "cache": true,
  "check-coverage": false,
  "extension": [
    ".ts"
  ],
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "coverage/**",
    "node_modules/**",
    "src/index.ts",
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*helper*.ts",
    "buildSrc/**",
    "gulpfile.js",
    "bin/**",
    "**/cli/**"
  ],
  "sourceMap": true,
  "reporter": [
    "html",
    "text",
    "text-summary"
  ],
  "all": true,
  "instrument": true  
}